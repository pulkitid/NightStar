<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="*"  android:stretchColumns="*" android:background="#ffffff" android:id="@+id/TableDisplay">


    <!-- Row 1 with single column -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/TextRolls" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="18dp" android:text="Rolls"  android:layout_span="3"
            android:padding="18dip" android:background="#000000" android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#ffffff" />


    </TableRow>


</TableLayout>
